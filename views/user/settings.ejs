<%- include('./partials/header') %>
<%- include('./partials/userHeader') %>

<!-- **************** MAIN CONTENT START **************** -->
<main>
    <!-- ======================= Content START -->
    <section class="pt-3">
        <div class="container">
            <div class="row">
                <%- include('./partials/userSidebar') %>

                <!-- Main content START -->
                <div class="col-lg-8 col-xl-9">
                    <!-- Offcanvas menu button -->
                    <div class="d-grid mb-0 d-lg-none w-100">
                        <button class="btn btn-primary mb-4" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasSidebar" aria-controls="offcanvasSidebar">
                            <i class="fas fa-sliders-h"></i> Menu
                        </button>
                    </div>

                    <div class="vstack gap-4">
                        <!-- Notifications START -->
                        <div class="card border">
                            <!-- Card header -->
                            <div class="card-header border-bottom">
                                <h4 class="card-header-title">Notification Settings</h4>
                            </div>

                            <!-- Form START -->
                            <form class="card-body" method="POST" action="/update-notifications">
                                <% if (message) { %>
                                    <div class="alert alert-<%= message.type === 'success' ? 'success' : 'danger' %> mb-4">
                                        <%= message.text %>
                                    </div>
                                <% } %>

                                <!-- Radio -->
                                <div class="mb-4">
                                    <label class="form-label">Newsletter<span class="text-danger">*</span></label>
                                    <div class="d-flex gap-2 gap-sm-4 flex-wrap">
                                        <div class="form-check radio-bg-light">
                                            <input class="form-check-input" type="radio" name="newsletter" id="flexRadioDefault1" value="Daily" <%= user && user.notificationSettings.newsletter === 'Daily' ? 'checked' : '' %>>
                                            <label class="form-check-label" for="flexRadioDefault1">Daily</label>
                                        </div>
                                        <div class="form-check radio-bg-light">
                                            <input class="form-check-input" type="radio" name="newsletter" id="flexRadioDefault2" value="Twice a week" <%= user && user.notificationSettings.newsletter === 'Twice a week' ? 'checked' : '' %>>
                                            <label class="form-check-label" for="flexRadioDefault2">Twice a week</label>
                                        </div>
                                        <div class="form-check radio-bg-light">
                                            <input class="form-check-input" type="radio" name="newsletter" id="flexRadioDefault3" value="Weekly" <%= user && user.notificationSettings.newsletter === 'Weekly' ? 'checked' : '' %>>
                                            <label class="form-check-label" for="flexRadioDefault3">Weekly</label>
                                        </div>
                                        <div class="form-check radio-bg-light">
                                            <input class="form-check-input" type="radio" name="newsletter" id="flexRadioDefault4" value="Never" <%= user && user.notificationSettings.newsletter === 'Never' ? 'checked' : '' %>>
                                            <label class="form-check-label" for="flexRadioDefault4">Never</label>
                                        </div>
                                    </div>
                                </div>

                                <!-- Switch -->
                                <div class="form-check form-switch form-check-md d-flex justify-content-between mb-4">
                                    <label class="form-check-label ps-0 pe-4" for="checkPrivacy1">Notify me via email when logging in</label>
                                    <input class="form-check-input flex-shrink-0" type="checkbox" name="loginEmailNotifications" id="checkPrivacy1" <%= user && user.notificationSettings.loginEmailNotifications ? 'checked' : '' %>>
                                </div>

                                <!-- Switch -->
                                <div class="form-check form-switch form-check-md d-flex justify-content-between mb-4">
                                    <label class="form-check-label ps-0 pe-4" for="checkPrivacy2">I would like to receive booking assist reminders</label>
                                    <input class="form-check-input flex-shrink-0" type="checkbox" name="bookingEmailNotifications" id="checkPrivacy2" <%= user && user.notificationSettings.bookingEmailNotifications ? 'checked' : '' %>>
                                </div>

                                <!-- Switch -->
                                <div class="form-check form-switch form-check-md d-flex justify-content-between mb-4">
                                    <label class="form-check-label ps-0 pe-4" for="checkPrivacy3">I would like to receive emails about Booking promotions</label>
                                    <input class="form-check-input flex-shrink-0" type="checkbox" name="hotelBooking" id="checkPrivacy3" <%= user && user.notificationSettings.hotelBooking ? 'checked' : '' %>>
                                </div>

                                <!-- Switch -->
                                <div class="form-check form-switch form-check-md d-flex justify-content-between mb-4">
                                    <label class="form-check-label ps-0 pe-4" for="checkPrivacy7">I would like to know about information and offers related to my upcoming trip</label>
                                    <input class="form-check-input flex-shrink-0" type="checkbox" name="SaudiMuqeemPrint" id="checkPrivacy7" <%= user && user.notificationSettings.SaudiMuqeemPrint ? 'checked' : '' %>>
                                </div>

                                <!-- Switch -->
                                <div class="form-check form-switch form-check-md d-flex justify-content-between mb-4">
                                    <label class="form-check-label ps-0 pe-4" for="checkPrivacy4">Show your profile publicly</label>
                                    <input class="form-check-input flex-shrink-0" type="checkbox" name="bookingDummyPrint" id="checkPrivacy4" <%= user && user.notificationSettings.bookingDummyPrint ? 'checked' : '' %>>
                                </div>

                                <!-- Switch -->
                                <div class="form-check form-switch form-check-md d-flex justify-content-between mb-4">
                                    <label class="form-check-label ps-0 pe-4" for="checkPrivacy6">Send SMS confirmation for all online payments</label>
                                    <input class="form-check-input flex-shrink-0" type="checkbox" name="onlinePaymentConfirmation" id="checkPrivacy6" <%= user && user.notificationSettings.onlinePaymentConfirmation ? 'checked' : '' %>>
                                </div>

                                <!-- Switch -->
                                <div class="form-check form-switch form-check-md d-flex justify-content-between mb-4">
                                    <label class="form-check-label ps-0 pe-4" for="checkPrivacy5">Check which device(s) access your account</label>
                                    <input class="form-check-input flex-shrink-0" type="checkbox" name="deviceAccess" id="checkPrivacy5" <%= user && user.notificationSettings.deviceAccess ? 'checked' : '' %>>
                                </div>

                                <!-- Button -->
                                <div class="d-sm-flex justify-content-end">
                                    <button type="submit" class="btn btn-sm btn-primary me-2 mb-0">Save changes</button>
                                    <a href="#" class="btn btn-sm btn-outline-secondary mb-0">Cancel</a>
                                </div>
                            </form>
                            <!-- Form END -->
                        </div>
                        <!-- Notifications END -->

