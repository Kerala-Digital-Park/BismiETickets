    <script>
        document.getElementById("contactForm").addEventListener("submit", async function (e) {
          e.preventDefault();
      
          const form = e.target;
          const formData = new FormData(form);
          const messageP = document.getElementById("contactMessage");
      
          try {
            const response = await fetch("/contact", {
              method: "POST",
              body: new URLSearchParams(formData),
              headers: {
                "Content-Type": "application/x-www-form-urlencoded"
              }
            });
      
            const result = await response.json();
            if (result.success) {
              messageP.textContent = "Message sent successfully!";
              messageP.classList.remove("text-danger");
              messageP.classList.add("text-success");
              form.reset();
            } else {
              messageP.textContent = "Message not sent.";
              messageP.classList.remove("text-success");
              messageP.classList.add("text-danger");
            }
          } catch (error) {
            console.error("Error submitting contact form:", error);
            messageP.textContent = "An error occurred. Please try again.";
            messageP.classList.remove("text-success");
            messageP.classList.add("text-danger");
          }
        });
    </script>

