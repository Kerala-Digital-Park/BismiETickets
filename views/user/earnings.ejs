<%- include('./partials/header') %>
    <%- include('./partials/userHeader') %>

        <!-- **************** MAIN CONTENT START **************** -->
        <main>
            <%- include('./partials/agentTopBar') %>

            <!-- =======================
    Content START -->
            <section class="pt-0">
                <div class="container vstack gap-4">
                    <!-- Title START -->
                    <!-- <div class="row">
                <div class="col-12">
                    <h1 class="fs-4 mb-0"><i class="bi bi-graph-up-arrow fa-fw me-1"></i>Earnings</h1>
                </div>
            </div>	 -->
                    <!-- Title END -->

                    <!-- Counter START -->
                    <div class="row g-4">

                        <!-- Earning item -->
                        <div class="col-md-6 col-lg-3">
                            <div class="card card-body border p-4 h-100">
                                <h6 class="mb-0">Total Amount</h6>
                                <h3 class="mb-2 mt-2">₹ <%= totalAmount %>
                                </h3>
                                <!-- <a href="#" class="mt-auto">View transaction</a> -->
                            </div>
                        </div>

                        <!-- Grid item -->
                        <div class="col-md-6 col-lg-3">
                            <div class="card card-body border p-4 h-100">
                                <h6>Total Paid</h6>
                                <h3>₹ <%= totalBaseFare%>
                                </h3>
                                <!-- <p class="mb-0 mt-auto">Expected payout on 05/10/2022</p> -->
                            </div>
                        </div>

                        <!-- Grid item -->
                        <div class="col-lg-6">
                            <div class="card bg-primary p-4">
                                <div class="d-flex justify-content-between align-items-start text-white">

                                    <div class="text-white">
                                        <span>To be Paid</span>
                                        <h3 class="text-white mb-0">₹ <%= totalBaseFare%>
                                        </h3>
                                    </div>
                                    <!-- Card action START -->
                                    <div class="dropdown">
                                        <a class="text-white" href="#" id="creditcardDropdown" role="button"
                                            data-bs-toggle="dropdown" data-bs-auto-close="outside"
                                            aria-expanded="false">
                                            <!-- Dropdown Icon -->
                                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none"
                                                xmlns="http://www.w3.org/2000/svg">
                                                <circle fill="currentColor" cx="12.5" cy="3.5" r="2.5"></circle>
                                                <circle fill="currentColor" opacity="0.5" cx="12.5" cy="11.5" r="2.5">
                                                </circle>
                                                <circle fill="currentColor" opacity="0.3" cx="12.5" cy="19.5" r="2.5">
                                                </circle>
                                            </svg>
                                        </a>
                                        <ul class="dropdown-menu dropdown-menu-end"
                                            aria-labelledby="creditcardDropdown">
                                            <!-- <li>
                                                <a class="dropdown-item" href="#" data-bs-toggle="modal"
                                                    data-bs-target="#bankModal" data-mode="edit"
                                                    data-title="Edit Account" data-btn-text="Update"
                                                    data-user='<%- JSON.stringify(user) %>'>
                                                    <i class="bi bi-credit-card-2-front-fill me-2 fw-icon"></i>Edit
                                                    account
                                                </a>

                                            </li>
                                            <li>
                                                <a class="dropdown-item" href="#" data-bs-toggle="modal"
                                                    data-bs-target="#bankModal" data-mode="add"
                                                    data-title="Add New Account" data-btn-text="Add">
                                                    <i class="bi bi-credit-card me-2 fw-icon"></i>Add new account
                                                </a>
                                            </li> -->
                                            <% if (user.bankDetails && user.bankDetails.status !== "pending") { %>
                                                <li>
                                                    <form method="POST" action="/remove-account" onsubmit="return confirm('Are you sure you want to remove this account?');">
                                                        <input type="hidden" name="userId" value="<%= user._id %>">
                                                        <button type="submit" class="dropdown-item text-danger">
                                                            <i class="bi bi-trash me-2 fw-icon"></i>Remove account
                                                        </button>
                                                    </form>
                                                </li>
                                            <% } else { %>
                                                <li>
                                                    <a class="dropdown-item" href="#" data-bs-toggle="modal"
                                                        data-bs-target="#bankModal" data-mode="edit"
                                                        data-title="Edit Account" data-btn-text="Update"
                                                        data-user='<%- JSON.stringify(user) %>'>
                                                        <i class="bi bi-credit-card-2-front-fill me-2 fw-icon"></i>Edit account
                                                    </a>
                                                </li>
                                                <li>
                                                    <a class="dropdown-item" href="#" data-bs-toggle="modal"
                                                        data-bs-target="#bankModal" data-mode="add"
                                                        data-title="Add New Account" data-btn-text="Add">
                                                        <i class="bi bi-credit-card me-2 fw-icon"></i>Add new account
                                                    </a>
                                                </li>
                                            <% } %>
                                            
                                        </ul>
                                    </div>
                                    <!-- Card action END -->
                                </div>
                                <% if (user.bankDetails.accountNumber) { const
                                    accStr=user.bankDetails.accountNumber.toString(); const last4=accStr.slice(-4);
                                    const masked='*' .repeat(accStr.length - 4) + last4; %>
                                    <h5 class="text-white mt-4">
                                        <%= masked %>
                                    </h5>
                                    <% } %>

                                        <% if (user.ifscCode) { %>
                                            <span class="text-white">
                                                <%= user.bankDetails.ifscCode %>
                                            </span>
                                            <% } %>

                                                <% if (user.bankDetails.bankName || user.bankDetails.branchName) { %>
                                                    <div class="d-flex">
                                                        <% if (user.bankDetails.bankName) { %>
                                                            <span class="text-white">
                                                                <%= user.bankDetails.bankName %>
                                                            </span>
                                                            <% } %>
                                                                <% if (user.bankDetails.bankName &&
                                                                    user.bankDetails.branchName) { %>
                                                                    <span class="text-white mx-1">,</span>
                                                                    <% } %>
                                                                        <% if (user.bankDetails.branchName) { %>
                                                                            <span class="text-white">
                                                                                <%= user.bankDetails.branchName %>
                                                                            </span>
                                                                            <% } %>
                                                    </div>
                                                    <% } %>

                            </div>
                        </div>

                    </div>
                    <!-- Counter END -->

                </div>
            </section>
            <!-- =======================
    Content END -->

            <div class="modal fade" id="bankModal" tabindex="-1" aria-labelledby="bankModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <form id="bankForm">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="bankModalLabel">Account Info</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                    aria-label="Close"></button>
                            </div>
                            <div class="modal-body">

                                <div class="mb-3">
                                    <label for="accountHolderName" class="form-label">Account Holder Name</label>
                                    <input type="text" class="form-control" name="accountHolderName" required>
                                </div>

                                <div class="mb-3">
                                    <label for="bankName" class="form-label">Bank Name</label>
                                    <input type="text" class="form-control" name="bankName" required>
                                </div>

                                <div class="mb-3">
                                    <label for="branchName" class="form-label">Branch Name</label>
                                    <input type="text" class="form-control" name="branchName" required>
                                </div>

                                <div class="mb-3">
                                    <label for="accountNumber" class="form-label">Account Number</label>
                                    <input type="text" class="form-control" name="accountNumber" required>
                                </div>

                                <div class="mb-3">
                                    <label for="ifscCode" class="form-label">IFSC Code</label>
                                    <input type="text" class="form-control" name="ifscCode" required>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="submit" class="btn btn-primary" id="bankModalSubmitBtn">Add</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <script>
                const bankModal = document.getElementById('bankModal');

                bankModal.addEventListener('show.bs.modal', function (event) {
                    const button = event.relatedTarget;
                    const mode = button.getAttribute('data-mode');
                    const modalTitle = button.getAttribute('data-title');
                    const btnText = button.getAttribute('data-btn-text');

                    const modalLabel = bankModal.querySelector('.modal-title');
                    const submitBtn = bankModal.querySelector('#bankModalSubmitBtn');
                    modalLabel.textContent = modalTitle;
                    submitBtn.textContent = btnText;

                    const form = bankModal.querySelector('#bankForm');

                    if (mode === 'edit') {
                        const userData = JSON.parse(button.getAttribute('data-user'));
                        form.accountHolderName.value = userData.bankDetails?.accountHolderName || '';
                        form.bankName.value = userData.bankDetails?.bankName || '';
                        form.branchName.value = userData.bankDetails?.branchName || '';
                        form.accountNumber.value = userData.bankDetails?.accountNumber || '';
                        form.ifscCode.value = userData.bankDetails?.ifscCode || '';

                    } else {
                        form.reset(); // clear form for "add"
                    }
                });
            </script>

            <script>
                const bankForm = document.getElementById('bankForm');
                bankForm.addEventListener('submit', async function (event) {
                    event.preventDefault(); // Prevent default form submission

                    const updatedData = {
                        bankDetails: {
                            accountHolderName: bankForm.accountHolderName.value || '',
                            bankName: bankForm.bankName.value || '',
                            branchName: bankForm.branchName.value || '',
                            accountNumber: bankForm.accountNumber.value || '',
                            ifscCode: bankForm.ifscCode.value || ''
                        }
                    }

                    console.log('Form data:', updatedData);

                    try {
                        const response = await fetch('/add-bank', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json'
                            },
                            body: JSON.stringify(updatedData)
                        });

                        if (!response.ok) {
                            throw new Error('Network response was not ok');
                        }

                        const data = await response.json();
                        console.log('Response data:', data);

                       if (data.success) {
    Swal.fire({
        icon: 'success',
        title: 'Success',
        text: data.message
    }).then(() => {
        window.location.reload();
    });
} else {
    Swal.fire({
        icon: 'error',
        title: 'Error',
        text: 'Error adding bank details.'
    });
}

                    } catch (error) {
    console.error('Error:', error);
    Swal.fire({
        icon: 'error',
        title: 'Unexpected Error',
        text: 'Something went wrong. Please try again later.',
        confirmButtonText: 'OK'
    });
}
                });
            </script>

        </main>
        <!-- **************** MAIN CONTENT END **************** -->

